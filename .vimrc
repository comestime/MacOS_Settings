" choose default color scheme, and load it when macvim is invoked
:colo evening

" enable syntax highlighting
syntax on

" highlight matching search strings
set hlsearch

" make searches case insesitive
" :set ignorecase

" show line numbers
set number

" change tab size
set tabstop=4

" number of spaces to use for each step of (auto)indent
set shiftwidth=4

" make tab key insert spaces instead of tab characters
set expandtab

" when a brancket is inserted, briefly jump to the matching one
" the jump is only done if the match can be seen on the screen
set showmatch

" set folded code blocks
" set foldenable
" set foldnestmax=1
" set foldmethod=syntax

" set indenting lines
" se list lcs=tab:\|\ 

